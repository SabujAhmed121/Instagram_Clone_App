<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_post_height"
    android:background="@color/editProfileBg"
    android:padding="@dimen/search_margin_horizon"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_image"
        android:layout_width="@dimen/home_wei_hei"
        android:layout_height="@dimen/home_wei_hei"
        android:layout_marginStart="4dp"
        android:src="@drawable/person"
        app:civ_border_color="@color/white"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <TextView
        android:id="@+id/header_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/search_margin_horizon"
        android:layout_marginTop="@dimen/profile_margin_horizon"
        android:layout_marginEnd="@dimen/button_margin_end"
        android:letterSpacing="0.06"
        android:hint="@string/sabuj_ahmed"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_image" />

    <TextView
        android:id="@+id/header_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/card_radius"
        android:layout_marginTop="@dimen/card_radius"
        android:layout_marginEnd="@dimen/margin_horizon"
        android:fontFamily="@font/aref_ruqaa_bold"
        android:letterSpacing="0.15"
        android:text="@string/sabuj006_gmail_com"
        android:textColor="#322E2E"
        android:textSize="@dimen/text_size_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_user_name" />


</androidx.constraintlayout.widget.ConstraintLayout>